                    <button type="submit" class="btn btn-primary btn-block enter-btn">GRAB VIDEO</button>
                  </div> -->
                  <% if(download_url!=='' && download_url!=undefined) { %>
                  <div class="d-flex">
                    <a class="btn-block enter-btn" href="<%= download_url %>" style="text-decoration: none; color:#efefef" onclick="getSense()">
                    <button type="button"  class="btn btn-google col  btn-block enter-btn">
                        DOWNLOAD
                    </button>
                    </a>
                  </div>

                  <% } %>
                  <div class="d-flex">
                    <a class="btn-block enter-btn" id="refresh_state" style="text-decoration: none; color:#efefef">
                    <button type="button"  class="btn btn-google col  btn-block enter-btn" onclick="getSense()">
                        GET ANOTHER
                    </button>
                    </a>
                  </div>
                 

                  <p class="sign-up">&nbsp;</p>
                </form>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
      </div>
      <!-- page-body-wrapper ends -->
