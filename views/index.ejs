  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-4 mx-auto">
              <div class="card-body px-5 py-5">
                <h3 class="card-title text-center mb-3">INSTA DOWNLOADER</h3>
                <form method="post" action="/">

                    <% if(download_url=='') { %>
                  <div class="form-group">
                    <div class="input-group">
                    <label>&nbsp;</label>
                    <input type="text" class="form-control p_input" required placeholder="ENTER LINK" name="insta_url" onfocusout="validateURL(this)" onfocus="getSense()" >
                    <div class="input-group-append">
                            <button class="btn btn-sm btn-danger" id="video_get_btn" type="submit" onclick="getSense()" disabled="disabled">
                                <i class="mdi mdi-instagram"></i> <span>GRAB VIDEO</span>
                              </button>
                             
                          </button>
                      </div>
                    </div>
                  </div>
                  <% } %>


                  <!-- <div class="form-group">
                    <label>Password *</label>
                    <input type="text" class="form-control p_input">
                  </div> -->
                  <!-- <div class="form-group d-flex align-items-center justify-content-between">
