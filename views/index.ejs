    <script>

        $(document).ready(function(){
            $("#refresh_state").click(function(){
                window.location = window.location.href;
            })
        })


        function validateURL(e){
            let url = e.value;
            console.log("FOCUS OUT", url)
            let reg = /(?:(?:http|https):\/\/)?(?:www.)?(?:instagram.com|instagr.am)\/([A-Za-z0-9-_]+)/im;
            if(e.value){
                console.log(url.match(reg))
                if(e.value.match(reg)){
                    if(url.match(reg)){

                        document.getElementById('video_get_btn').disabled = false;
                    }else{
                document.getElementById('video_get_btn').disabled = "disabled";

                    }
                }
            }else{
                document.getElementById('video_get_btn').disabled = "disabled";
            }
            // navigator.vibrate([400, 300, 400])
            navigator.vibrate(100)
        }

        function getSense(){
            navigator.vibrate(100)
        }
    </script>
  
